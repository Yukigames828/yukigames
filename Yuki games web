<script>
// SỬA LỖI TYPEERROR: Chờ DOM load xong rồi mới chạy script
document.addEventListener('DOMContentLoaded', () => {
    // Welcome toast
    const welcome = document.getElementById('welcome-toast');
    if (welcome) {
        welcome.classList.add('show');
        setTimeout(() => welcome.classList.remove('show'), 5000);
    }

    // Carousel 3 ảnh
    let currentSlide = 0;
    const carouselContainer = document.getElementById('carouselContainer');

    window.prevSlide = function(e){
        e.stopPropagation();
        currentSlide = (currentSlide - 1 + 3) % 3;
        carouselContainer.style.transform = `translateX(-${currentSlide * 33.333}%)`;
    }

    window.nextSlide = function(e){
        e.stopPropagation();
        currentSlide = (currentSlide + 1) % 3;
        carouselContainer.style.transform = `translateX(-${currentSlide * 33.333}%)`;
    }

    // Game list + popup
    const games=[
        {name:"Free Fire MAX",img:"https://files.catbox.moe/9y8f0j.jpg",img1:"https://files.catbox.moe/ff1.jpg",img2:"https://files.catbox.moe/ff2.jpg",img3:"https://files.catbox.moe/ff3.jpg",size:"950 MB",version:"2.104.1",date:"09/12/2025",desc:"Latest version with stunning graphics!",link:"#",status:"new"},
        {name:"PUBG Mobile",img:"https://files.catbox.moe/3i5p8s.jpg",img1:"https://files.catbox.moe/pubg1.jpg",img2:"https://files.catbox.moe/pubg2.jpg",img3:"https://files.catbox.moe/pubg3.jpg",size:"1.8 GB",version:"3.5.0",date:"08/12/2025",desc:"New season update!",link:"#",status:"update"},
        {name:"Roblox",img:"https://files.catbox.moe/6v8q1j.jpg",img1:"https://files.catbox.moe/roblox1.jpg",img2:"https://files.catbox.moe/roblox2.jpg",img3:"https://files.catbox.moe/roblox3.jpg",size:"150 MB",version:"2.658.1",date:"09/12/2025",desc:"Play millions of games!",link:"#",status:"hot"}
    ];

    const list = document.getElementById('list');

    function render(data){
        list.innerHTML="";
        data.forEach(g=>{
            const card=document.createElement('div');card.className='game-card';
            if(g.status){const tag=document.createElement('div');tag.className='tag '+g.status;tag.textContent=g.status.toUpperCase();card.appendChild(tag);}
            card.innerHTML+=`
                <img src="${g.img}">
                <div class="card-info">
                    <h3>${g.name}</h3>
                    <div class="size">${g.size}</div>
                    <div class="download-btn" onclick='openPopup(${JSON.stringify(g)})'>Download Now</div>
                </div>
            `;
            list.appendChild(card);
        });
    }

    window.openPopup = function(g){
        document.getElementById('mName').textContent=g.name;
        document.getElementById('mImg1').src=g.img1 || g.img;
        document.getElementById('mImg2').src=g.img2 || g.img;
        document.getElementById('mImg3').src=g.img3 || g.img;
        document.getElementById('mSize').textContent=g.size;
        document.getElementById('mSize2').textContent=g.size;
        document.getElementById('mVersion').textContent=g.version;
        document.getElementById('mDate').textContent=g.date;
        document.getElementById('mDesc').textContent=g.desc;
        document.getElementById('mLink').href=g.link;
        currentSlide = 0;
        carouselContainer.style.transform = 'translateX(0%)';
        document.getElementById('modal').classList.add('active');
    }

    // Tìm kiếm
    const searchInput = document.getElementById('search');
    if (searchInput) {
        searchInput.addEventListener('input',function(){
            const term=this.value.toLowerCase();
            const filtered=games.filter(g=>g.name.toLowerCase().includes(term));
            render(filtered);
        });
    }

    render(games);
});

// Toggle menu & search – giữ nguyên
function toggleMenu(){
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('overlay');
    if (sidebar && overlay) {
        sidebar.classList.toggle('active');
        overlay.classList.toggle('active');
    }
}

function toggleSearch(){
    const overlay = document.getElementById('searchOverlay');
    if (overlay) {
        overlay.classList.toggle('active');
        if (overlay.classList.contains('active')) {
            const searchInput = document.getElementById('search');
            if (searchInput) searchInput.focus();
        }
    }
}
</script>
